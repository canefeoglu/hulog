

<h1>Listing users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.age %></td>
        <td><%= user.location %></td>
        <td ><%= link_to '', edit_user_path(user), class: "fui-new" %>
			<%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "fui-cross" %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
